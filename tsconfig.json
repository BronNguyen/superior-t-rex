{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2016",
    "module": "es6",
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["../*"]
    }
  },
  "include": ["src/**/*", "assets/*"],
  "typeRoots": ["./node_modules/phaser/types"],
  "types": ["Phaser"]
}
